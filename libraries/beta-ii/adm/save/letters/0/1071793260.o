__Letter "this idea is for bards#include <std.h>inherit SONGvoid create() {  ::create()  set_verses(({    \"Heat beats down from the cloudless sky, gusting winds sear the skin\",    \"Endless trudging with sun in your eye, let fatigue draw you in!\"  }))  set_auto(1)  set_type(\"bad\")  set_song_name(\"verse of fatigue\")}int check_sing(object o) {  if (o->query_subclass() == \"bard\" && o->query_skill(\"euphony\") >= 70)    return 1  return 0}void finish_song() {  object tp=query_caster()  object tgt=query_target()  int euph=tp->query_skill(\"euphony\")  int ent=tp->query_skill(\"entertainment\")    tgt->add_sp(-(euph+ent/2))  message(\"song\",\"You suddenly feel very tired.\",tgt)  message(\"song\",tgt->query_cap_name()+\" suddenly looks very tired.\",    environment(tgt), tgt)}"
__Undeleted ({"amarael",})
