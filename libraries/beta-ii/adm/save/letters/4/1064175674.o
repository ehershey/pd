__Letter "//deaths scythe#include <std.h>inherit WEAPON;int wield_it();int remove_it();void create() { ::create();   set_name(\"scythe\");   set_short(\"%^BOLD%^%^BLACK%^A long sharp scythe\");   set_long(\"The scythe pulses death out of every crevice. The sharp hooked blade seems to already glow red with the thought of blood.\");   set_weight(0);   set_id( ({ \"scythe\", \"scythe\", \"deathscythe\"}) );   set_value(0);   set_ac(999999999);   set_wc(99);   set_type(\"blade\");   set_hands(2);   set_wield((: wield_it() :));   set_unwield((: remove_it() :));}int wield_it() {	this_living()->force_me(wield_scythe);	if((string)query_wielded()->query_name() == \"death\" && (string)query_wielded()->query_level() == 400) return 1;	write(\"The power of Death's scythe overwhelms you, causing you to fly backwards, dropping the scythe.\");	(string)query_wielded()->add_hp(-20);	(string)query_wielded()->force_me(\"drop scythe\");	return 0;}int remove_it() {	if((string)query_wielded()->query_name() == \"death\" && (string)query_wielded()->query_level() == 400) return 0;	write(\"The power of Death's scythe overwhelms you, causing you to fly backwards, dropping the scythe.\");	(string)query_wielded()->add_hp(-20);	(string)query_wielded()->force_me(\"drop scythe\");	return 1;}"
__Undeleted ({"ruin",})
