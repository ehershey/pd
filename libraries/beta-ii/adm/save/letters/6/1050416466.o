__Letter "cat redwood.c#include <std.h>inherit SONGvoid create() { ::create()   set_verses(({     \"Standing up tall,\",     \"In the breeze you shall not fall,\",     \"The grass may bend,\",     \"And the earth may break,\",     \"In the act of life, you shall pertake.\"   }))   set_type(\"good\")   set_song_name(\"song of the redwood\")}int check_sing(object o) {if (o->query_subclass() == \"testbard\" && o->query_skill(\"euphony\") >= 85)     return 1}void finish_song() {   object ob, tp   int atk   tp = this_object()->query_caster()   ob = this_object()->query_target()   atk = tp->query_skill(\"defense\")/2   if (!ob || !present(ob, environment(tp)) ||       ob->query_stat_bonus(\"defense\") >= atk * 2) {      message(\"info\", \"Nothing happens.\", ob)      return   }   ob->add_skill_bonus(\"defense\", atk, (tp->query_skill(\"defense\")/2))   tell_room(environment(tp), ob->query_cap_name()+\" watches as \"     +ob->query_title_gender()+\" skin shimmers.\", ({ ob }))   message(\"song\", \"Your skin shimmers for a moment, then you feel it harden.\",ob)}"
__Undeleted ({"shinkoro",})
